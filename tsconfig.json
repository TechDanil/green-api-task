{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["./common/src/*"],
      "@m1-microservice/*": ["./m1-microservice/src/*"],
      "@m2-microservice/*": ["./m2-microservice/src/*"]
    }
  },
  "include": ["./common/src", "./m1-microservice/src", "./m2-microservice/src"],
  "exclude": ["node_modules", "dist"]
}
